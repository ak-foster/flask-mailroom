{% extends 'base.jinja2' %}

{% block subtitle %}New Donation{% endblock subtitle %}
{% block content %}
    <p>Fill in the form and click submit to record a new donation.</p>
    <form method="POST">
        <label for="name">Full Name:</label><input type="text" id="name" name="name">
        <label for="amount">Amount:</label><input type="number" id="amount" name="amount">
        <input type="submit" value="Submit">
    </form>
{% endblock content %}